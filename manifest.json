{

  "manifest_version": 2,
  "name": "anti-social",
  "version": "0.2.0",

  "description": "An extension aimed at increasing human happiness by blocking social media sites.",
  "icons": {
    "48": "icons/no-entry-48.png",
    "96": "icons/no-entry-96.png"
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "pages/options.html",
    "browser_style": true
  },

  "web_accessible_resources": [
    "pages/blocked.html"
  ]

}
